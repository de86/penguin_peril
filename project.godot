; Engine configuration file.
; It's best edited using the editor UI and not directly,
; since the parameters that go here are not all obvious.
;
; Format:
;   [section] ; section goes between []
;   param=value ; assign values to parameters

config_version=5

[application]

config/name="Penguin Peril"
run/main_scene="res://src/scenes/game.tscn"
config/features=PackedStringArray("4.2", "Mobile")
config/icon="res://icon.svg"

[autoload]

Constants="*res://src/autoloads/constants.gd"
EventBus="*res://src/autoloads/event_bus.gd"
Logger="*res://src/autoloads/logger.gd"
InputHandler="*res://src/autoloads/input_handler.gd"
ScoreManager="*res://src/autoloads/score_manager.gd"
SFXManager="*res://src/autoloads/sfx_manager.gd"
MusicManager="*res://src/autoloads/music_manager.gd"

[display]

window/size/viewport_width=1080
window/size/viewport_height=1920
window/size/window_width_override=405
window/size/window_height_override=720
window/stretch/mode="viewport"
window/handheld/orientation=1

[layer_names]

3d_physics/layer_1="Player"
3d_physics/layer_2="Obstacles"
3d_physics/layer_3="Gutter"
3d_physics/layer_4="Scenery"

[rendering]

renderer/rendering_method="mobile"
textures/vram_compression/import_etc2_astc=true
